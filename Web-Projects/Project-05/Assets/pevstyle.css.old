* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Courier New', Courier, monospace;
}
body {
    background: url("./image.jpg") no-repeat center center / cover;
    height: 100vh;
}
.container {
    background: rgba(0,0,0,.8);
    height: 100vh;
}
.task-adder {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50px 120px;
}
.task-adder #text{
    flex: 10;
    padding: 20px 20px 20px 20px;
    border-radius: 20px 0 0 20px;
    border: none;
    outline: none;
    font-size: 20px;
}
.task-adder #submit-btn {
    flex: 2;
    padding: 10px;
    border-radius: 0 20px 20px 0;
    border: none;
    outline: none;
    background-color: red;
    font-size: 40px;
    font-weight: bolder;
}
.task-adder #submit-btn:hover {
    background-color: #ff4444;
    cursor: pointer;
}
.task-adder #submit-btn:active {
    background-color: red;
    cursor:wait;
}
.task-list{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 0 120px;
}
.task-list .task-list-in {
    display: flex;
    justify-content: space-between;
    align-items: center;
    min-width: 100%;
    background-color: #fff;
    padding: 5px 20px;
    border-radius: 20px;
    margin-bottom: 10px;
}
.task-list .task-list-in p {
    font-size: 20px;
    font-weight: bolder;
}
.task-list #finish {
    background-color: green;
    padding: 20px;
    border: none;
    border-radius: 10px;
    font-size: 20px;
}
.task-list #delete {
    background-color: red;
    padding: 20px;
    border: none;
    border-radius: 10px;
    font-size: 20px;
}